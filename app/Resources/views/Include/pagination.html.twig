<div class="pagination">

    <ul>

        {% if pagination.page > 1 %}
            <li class="prev"><a href="{{ path(pagination.url, {"page" : pagination.page - 1}) }}">Prev</a></li>
        {% endif %}

        <li class="current">{{ pagination.page }}</li>

        {% set showNext =  (pagination.page * pagination.maxResult) < pagination.total %}

        {% if showNext %}
            <li class="next"><a href="{{ path(pagination.url, {"page" : pagination.page + 1}) }}">Next</a></li>
        {% endif %}

    </ul>


</div>